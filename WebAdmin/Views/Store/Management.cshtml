@{
    ViewBag.Title = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var StoreList = ViewData["StoreList"] as List<WebAdmin.Models.Store>;
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Product</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Store Name</th>
                            <th>Location</th>
                            <th>Province</th>
                            <th>PhoneNumber</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < StoreList.Count; i++)
                        {
                            <input type="text" id="tdId_@i" value="@StoreList[i].Id" hidden />

                            <tr>

                                <td id="tdStoreName_@i" value="@StoreList[i].StoreName">@StoreList[i].StoreName</td>
                                <td id="tdLocation_@i" value="@StoreList[i].Location">@StoreList[i].Location</td>

                                <td id="tdProvince_@i" value="@StoreList[i].Province">@StoreList[i].Province</td>
                                <td id="tdPhoneNumber_@i" value="@StoreList[i].PhoneNumber">@StoreList[i].PhoneNumber</td>
                        
                                <td>
                                    <button onclick="setData(@i)" class="btn btn-info btn-xs btnEdit" data-toggle="modal" data-target="#editUserModel" value="@i"><i class="fa fa-wrench"></i> Edit </button>
                                    @using (Html.BeginForm("RemoveStore", "Store", FormMethod.Post))
                                    {
                                        <button type="submit" class="btn btn-danger btn-xs" id="btnRemove" value="@StoreList[i].Id"><i class="fa fa-trash-o"></i> Remove </button>
                                    }
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editUserModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("UpdateStore", "Store", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="StoreName">
                            StoreName
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="hidden" id="Id" name="Id" class="form-control col-md-7 col-xs-12">
                            <input type="text" id="StoreName" name="StoreName" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Location">
                            Location
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="Location" name="Location" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Store">
                            Province
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="Province" name="Province" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UserName">
                            PhoneNumber <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" id="PhoneNumber" name="PhoneNumber" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button class="btn btn-primary" type="reset">Reset</button>
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            }

            </div>
    </div>
</div>

<script src="../vendors/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {

            });

    function setData(i) {

        var id = $("#tdId_" + i).attr('value');
                var storeName = $("#tdStoreName_" + i).attr('value');
                var location = $("#tdLocation_" + i).attr('value');
                var province = $("#tdProvince_" + i).attr('value');
                var phoneNumber = $("#tdPhoneNumber_" + i).attr('value');

           
                 $("#Id").val(id);
        $("#StoreName").val(storeName);
        $("#Location").val(location);
        $("#Province").val(province);
        $("#PhoneNumber").val(phoneNumber);
           


            }
</script>
<script src="../vendors/jquery/dist/jquery.min.js"></script>